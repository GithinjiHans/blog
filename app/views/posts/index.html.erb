<h1>Posts</h1>
<% @posts.each do |post| %>
  <p>
    <strong><%= post.title %></strong>
    <%= post.body %>
    <%= link_to "View", post_path(post)%>
    <%= link_to "Edit", edit_post_path(post) %>
    <%= link_to "Delete", post_path(post),  data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }%>
  </p>
<% end %>
